#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ 

override_dh_install:
	echo $(DESTDIR) > /tmp/env
	mkdir -p debian/tmp/usr/share/telephony-prototype
	mkdir -p debian/tmp/usr/share/applications/
	cp telephony-prototype.desktop debian/tmp/usr/share/applications/
	cp -r *.qml assets DetailViewContact DetailViewLiveCall dummydata fontUtils.js \
		PanelCalls PanelMessages README Widgets DetailViewKeypad DetailViewMessages \
		LiveCallDetailView PanelContacts Panes debian/tmp/usr/share/telephony-prototype/
	dh_install
